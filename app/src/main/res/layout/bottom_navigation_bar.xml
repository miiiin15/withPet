<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:background="@drawable/bg_navigation"
    android:elevation="12dp"
    android:orientation="horizontal"
    android:weightSum="5">

    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/nav_home_icon"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu_home"
            android:tag="MAIN_icon" />

        <TextView
            android:id="@+id/nav_home_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="MAIN_text"
            android:text="홈"
            android:textColor="@color/disable"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/nav_chat_icon"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu_message"
            android:tag="CHAT_icon" />

        <TextView
            android:id="@+id/nav_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="CHAT_text"
            android:text="채팅"
            android:textColor="@color/disable"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_walk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/nav_walk_icon"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu_walk"
            android:tag="WALK_icon" />

        <TextView
            android:id="@+id/nav_walk_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="WALK_text"
            android:text="산책"
            android:textColor="@color/disable"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_match"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/nav_match_icon"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu_matching"
            android:tag="MATCH_icon" />

        <TextView
            android:id="@+id/nav_match_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="MATCH_text"
            android:text="매칭"
            android:textColor="@color/disable"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nav_my"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/nav_my_icon"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:src="@drawable/ic_menu_my"
            android:tag="PROFILE_icon" />

        <TextView
            android:id="@+id/nav_my_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="PROFILE_text"
            android:text="MY"
            android:textColor="@color/disable"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
