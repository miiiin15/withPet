<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"> <!-- 배경색 또는 이미지 추가 가능 -->
    <!--    android:background="@drawable/your_background_image"-->


    <LinearLayout
        android:id="@+id/img_app_icon_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_logo_name_white" />
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_app_icon_center"
        android:paddingVertical="12dp"
        android:layout_centerHorizontal="true"
        android:text="마음에 맞는 산책 친구를 찾다"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_app_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_app_name"
        android:layout_centerHorizontal="true"
        android:text="버전"
        android:textColor="@color/white"
        android:textSize="12sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/img_logo_big"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="-48dp"
        android:layout_below="@+id/img_app_icon_center"
        android:layout_alignParentStart="true"
        android:rotation="45"
        android:src="@drawable/img_logo" />

    <ImageView
        android:id="@+id/img_logo_small"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:rotation="-45"
        android:layout_below="@+id/img_logo_big"
        android:src="@drawable/img_logo" />
</RelativeLayout>
