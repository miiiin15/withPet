<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_horizontal">

    <com.withpet.mobile.ui.custom.CustomInput
        android:id="@+id/customInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CustomInput" />

    <com.withpet.mobile.ui.custom.CustomInput
        android:id="@+id/customInput_disable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="CustomInput" />


    <com.withpet.mobile.ui.custom.CustomSelect
        android:id="@+id/customSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="CustomSelect"
        app:type="list" />

    <com.withpet.mobile.ui.custom.CustomSelect
        android:id="@+id/customSelect_disable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="CustomSelect Disabled"
        app:type="list" />

    <com.withpet.mobile.ui.custom.CustomButton
        android:id="@+id/btn_alert_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Alert 테스트" />

    <com.withpet.mobile.ui.custom.CustomButton
        android:id="@+id/btn_gender_input_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="성별입력 팝업 테스트" />

    <com.withpet.mobile.ui.custom.CustomButton
        android:id="@+id/btn_reserved_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="반려견 정보입력 TEST" />

    <com.withpet.mobile.ui.custom.CustomButton
        android:id="@+id/btn_reserved_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="예비 2" />

</LinearLayout>
