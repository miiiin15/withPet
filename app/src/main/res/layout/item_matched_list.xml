<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/match_cardView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/disable"
        app:cardCornerRadius="15dp"
        app:cardElevation="1dp">

        <!-- 프로필 이미지 영역 -->
        <ImageView
            android:id="@+id/match_profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/disable"
            android:scaleType="centerCrop" />

        <!-- 오른쪽 아래 둥근 버튼 -->
        <com.withpet.mobile.ui.custom.CustomLikeButton
            android:id="@+id/match_likeButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|end"
            android:layout_margin="12dp"
            android:onClick="TODO" />



    </com.google.android.material.card.MaterialCardView>
    <!-- 주소 텍스트 -->
    <TextView
        android:id="@+id/match_addressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:paddingTop="6dp"
        android:text="도도도 시시시 구구구"
        android:textColor="@color/grey1"
        android:textSize="12sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/match_userInfoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 유저네임 텍스트 -->
            <TextView
                android:id="@+id/match_usernameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textColor="@color/txt1"
                android:textSize="15dp"
                android:textStyle="bold" />

            <!-- 유저네임 텍스트 -->
            <TextView
                android:id="@+id/match_ageText"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="@color/txt1"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
