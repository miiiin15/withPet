    <!-- Dialog Max HeightScrollView -->
    <declare-styleable name="MaxHeightScrollView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>


    <style name="TitleText">
        <item name="android:textColor">@color/txt3</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomSheetTitleText">
        <item name="android:textColor">@color/txt3</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomInputTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">16sp</item> <!-- 입력된 값의 글자 크기 -->
        <item name="android:textColor">@color/txt1</item> <!-- 입력된 값의 색상 -->
    </style>

    <!-- Progress Dialog -->
    <style name="AppDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="AlertCornersRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
    </style>

    <!-- DatePicker -->

    <!-- BottomSheetDialog -->
    <style name="TopCornersRounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/bottom_sheet_radius</item>
        <item name="cornerSizeTopRight">@dimen/bottom_sheet_radius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item> <!-- This is important -->
        <item name="android:statusBarColor">@android:color/transparent
        </item> <!-- And then this will be needed -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>


